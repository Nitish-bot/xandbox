generator client {
  provider     = "prisma-client"
  output       = "./generated/"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Validators {
  id                  String @id @default(cuid())
  ipAddress           String
  isPublic            Boolean
  lastSeenTimestamp   BigInt
  pubkey              String @unique @db.VarChar(44)
  rpcPort             Int
  storageCommitted    BigInt
  storageUsagePercent Int
  storageUsed         BigInt
  uptime              Int
  version             String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([pubkey, createdAt(sort: Desc)])
}